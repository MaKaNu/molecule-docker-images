for d in centos7-pys centos7-pys-systemd centos8-pys centos8-pys-systemd centos-stream8-pys \
		centos-stream8-pys-systemd centos-stream9-pys centos-stream9-pys-systemd fedora-pys \
		fedora-pys-systemd ubuntu2004-pys ubuntu2004-pys-systemd
do
    pushd $d
    docker build -t nmusatti/$(basename $PWD) --no-cache .
    if [[ $(basename $PWD) =~ systemd ]]; then
        ( sudo docker run -v /sys/fs/cgroup:/sys/fs/cgroup:ro -it --rm --privileged nmusatti/$(basename $PWD) /bin/bash )
    else
        docker run -it --rm nmusatti/$(basename $PWD)
    fi
    docker push nmusatti/$(basename $PWD)
    popd
done
